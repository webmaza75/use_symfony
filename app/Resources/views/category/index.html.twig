{% extends 'base.html.twig' %}
{% block path %}<a class="btn btn-primary" href="{{ path('category_new') }}">Создать новую категорию</a>{% endblock %}
{% block body %}
    <h1>Список категорий</h1>

    {% if categories %}
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>

                {% for category in categories %}
                    <tr>
                        <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">Редактировать</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
        <hr>
    {% else %}
        <p class="alert alert-warning">Категории отсутствуют. Добавьте категорию:
            <a class="btn btn-primary" href="{{ path('category_new') }}">Создать новую категорию</a>
        </p>
    {% endif %}

    <p>
        <a class="btn btn-success" href="{{ path('post_index') }}">К списку статей</a>
    </p>

{% endblock %}